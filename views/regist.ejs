<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" href="css/style.css">

	<!-- Bootstrap Link -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
     
</head>
<body>
	<!-- Register Here -->
	  
	<br/> 
	<section id="login">
		<div class="container">
			<div class="row">
				<!-- Column-1 -->
				<div class="col-lg-3">
					 
				</div>
				<!-- End Column-1 -->

				<!-- Column-2 -->
				<div class="col-lg-5 bglogin p-4 border border-rounded mb-4">
				
					<form action="/insertStudent" method="post" enctype="multipart/form-data">
						<!-- logo -->
						<center>
                            <img class="mb-4 rounded-circle" src="./Images/logo.jpeg" alt="logo" width="20%"
                                height="20%">
                        </center>

						<!-- Heading (Register Here) -->  
						<h1 class="mb-5 text-center" style="color:#5677a0">Register Here</h1>
						<% if(message.length > 0){ %>
							<div class="alert alert-danger">
								<!-- To print -->
								 <%= message %>
							</div>
							<% } %>
						<!-- User Name -->
						<div class="row" id="rw">
							 
							<div class="col-lg-12 ">
								 
								<input name="name" class="form-control text-capitalize" id="name" type="text" placeholder="Your username" autocomplete="off">
								<i class="fa-solid fa-user"></i>
							</div>	 
							
							 
							 
						</div>
                        <p id="userch"></p>
						<!-- Email -->
						<div class="row mb-3">
							 
							<div class="col-lg-12">
								<input name="email" class="form-control" id="emil" type="email" placeholder="Your email" autocomplete="off">
								<!-- <i class="fa-solid fa-envelope"></i> -->
								 
								 
							</div>
							<p id="emailch"></p>
						</div>

						<!-- Password -->
						<div class="row mb-4">
							 
							<div class="col-lg-12">
								<input name="password" class="form-control" id="pswd" type="password" 
								placeholder="Enter password">
								<!-- <i class="fa-solid fa-eye"></i> -->
								 
							</div>
							<p id="pswdch"></p>
						</div>

						<!-- Confirm Password -->
						<div class="row mb-4">
							 
							<div class="col-lg-12">
								<input name="confirmpassword" class="form-control" id="pswdch" type="password"
								placeholder="Confirm password">
								 
							</div>
							<p id="cpswd"></p>
						</div>
						<!--Image-->
						<div class="row mb-4">
							 
							<div class="col-lg-12">
								<input name="image" class="form-control" type="file"
								placeholder="Upload image">
							</div>
						</div>
						 
						<!-- Button (Login) -->
						 
						<center>
							<button class="btn btn-primary mb-1 btn-lg w-100">Register</button>
						</center>
						<br/>
						<p class="text-uppercase fw-light fw-bold" style="color:#da7a13">Already registered?  <a href="./">Login</a></p>
					</form>
					
				</div>
				<!-- End Column-2 -->
			</div>
		</div>
	</section>
	<!-- End Register Here -->
    <script type="text/javascript">
        $(document).ready(function()
		{
            $('#userch').hide();
			$('#emailch').hide();
			$('#pswdch').hide();
			$('#cpswd').hide();
			var user_er=true;
			var emaild=true;
			var pswd=true;
			var cpswd=true;
			$('#name').keyup(function()
		{
			userfunc();
		})
		function userfunc()
		{
			let uservl=$('#name').val();
            if(uservl.length=='')
		{
			$('#userch').show();
			$('#userch').html('**please enter your username');
			$('#userch').focus();
			$('#userch').css({'color':'red','margin-bottom':'14px'});
			$('#rw').css('margin-bottom','0px');
			user_er=false;
			return false;
		} 
		if((uservl.length<4) || (uservl.length>6))
		{
			$('#userch').show();
			$('#userch').html('**username length must between 4 and 6');
			$('#userch').focus();
			$('#userch').css({'color':'red','margin-bottom':'14px'});
			$('#rw').css('margin-bottom','0px');
			user_er=false;
			return false;

		}
		else{
			$('#userch').hide();
			$('#rw').css('margin-bottom','28px');
		}
		}
		})
    </script>
</body>
</html>