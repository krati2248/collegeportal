<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">

    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    
    <style>
        .btn {
            background: linear-gradient(90deg, #a5b5df, #678ebe);

        }
    </style>
</head>

<body class="b">
    <!-- Login -->
    <br />
    <br />
    <section id="login" class="my-5">
        <div class="container">
            <div class="row">
                <!-- Column-1 -->
                <div class="col-lg-3">

                </div>
                <!-- End Column-1 -->

                <!-- Column-2 -->
                <div class="col-lg-5 bglogin p-4">
                    <form action="/verifyLogin" method="post">
                        <!-- logo -->
                        <center>
                            <img class="mb-4 rounded-circle" src="./Images/logo.jpeg" alt="logo" width="20%"
                                height="20%">
                        </center>

                        <!-- Heading (Login) -->
                        <h1 class="mb-5 text-center" style="color:#5677a0;">Login</h1>
                        <% if(msg.length>0){ %>
                            <div class="alert alert-success">
                                <!-- To print -->
                                <%= msg %>
                            </div>
                            <% } %>
                                <% if(message.length>0){ %>
                                    <div class="alert alert-danger">
                                        <!-- To print -->
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <!-- Email -->
                                        <div class="row mb-3">

                                            <div class="col-lg-12">
                                                <input name="email" class="form-control" type="email"
                                                    placeholder="Your email">
                                                <i class="fa-solid fa-envelope"></i>
                                            </div>
                                        </div>

                                        <!-- Password -->
                                        <div class="row mb-5">

                                            <div class="col-lg-12">
                                                <input name="password" class="form-control" type="password"
                                                    placeholder="Enter password">
                                                <i class="fa-solid fa-eye"></i>
                                            </div>
                                        </div>

                                        <!-- Button (Login) -->
                                        <center>
                                            <button class="btn btn-primary mb-5 btn-lg w-100"
                                                type="submit">Login</button>
                                        </center>

                                        <!-- Register Now -->
                                        <center>
                                            <p class="text-uppercase fw-light fw-bold" style="color:#da7a13">Don't have
                                                an account? &nbsp;<a href="./register">Register Now</a></p>
                                        </center>
                    </form>

                    <center>
                        <p class="text-uppercase">
                            <a href="#" data-bs-toggle="modal" data-bs-target="#Forgot"
                                style="text-decoration: none;">Forgot Password</a>
                        </p>
                    </center>
                    <center>
                        <p>
                            <a href="/auth/google">google login</a>
                        </p>
                    </center>


                </div>
                <!-- End Column-2 -->
            </div>
        </div>
    </section>
    <!-- End Login -->
    <!--Forgot Password -->
    <div class="modal fade" id="Forgot" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Forget Password</h1>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form action="/forgot_Password" method="post">
                        <div class="mb-3">
                            <label for="">Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>

                        <button type="submit" class="btn "
                            style="background-color: #34B1AA; color:black">Submit</button>

                    </form>
                </div>

            </div>
        </div>
    </div>
</body>

</html>